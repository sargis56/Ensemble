                }
            }).done(function(data) {
                tests = data;
                $('#test-list').html('');
                for( i in tests){
                    var testHTML = `<div id="`+ tests[i].test +`" class="test"><span class="test-name">` + tests[i].test + `</span>
                    <ul>`;
                        var keys = Object.keys(tests[i].data);
                        for(var j = 0; j < keys.length; j++){
                            
                            testHTML += `<li>` + keys[j] + `  : ` + tests[i].data[keys[j]] + `</li>`
                        }
                    testHTML += `</ul>
                     - Status:<span class="result"> --- </span> </div> <br><br>`;
                    $('#test-list').append(testHTML);

                }
